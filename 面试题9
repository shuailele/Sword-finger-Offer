//面试题9

//用两个栈实现一个队列。队列的声明如下，请实现它的两个函数appendTail和deleteHead，
//分别完成在队列尾部插入节点和在队列头部删除节点的功能。

#include "stack"
#include "iostream"
using namespace std;

template <typename T> class CQueue{
public:
    CQueue();
    ~CQueue();
    
    void appendTail(const T& node);
    T deleteHead();

private:
    stack<T> stack1;
    stack<T> stack2;
};

template <typename T>
void CQueue<T>::appendTail(const T &node) {
    stack1.push(node);
}

template <typename T>
T CQueue<T>::deleteHead() {
    if(stack2.empty()){
        while(!stack1.empty()){
            stack2.push(stack1.top());
            stack1.pop();
        }
    }
    
    if(stack2.empty()){
        cout<<"队列中没有元素，出队时发生错误"<<endl;
        exit(1);
    }
    
    T head = stack2.top();
    stack2.pop();

    return head;
}
